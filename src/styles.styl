// You can add global styles to this file, and also import other style files
@require 'reset.styl'

@font-face
  font-family 'Aref Ruqaa'
  src url(assets/fonts/arefruqaa-regular.ttf)

html, body
  width 100%
  height 100%

section
  margin 3rem auto

h1
    font-size 40px

h2
  font-size 30px
  font-weight bold

p
  font-size 18px
  line-height 2rem

.header
  height 3rem
  padding 2rem
  background-color #fff

.label
  font-style italic

.content
  height 100%
  margin 20px 0
  padding 1rem
  background-color #41DD77

.content-block
  display block
  text-align center
  background-color #fff
  border-radius 10px
  box-shadow -5px 10px 18px rgba(21, 19, 19, 0.42)
  margin 3rem 12rem
  padding 1.5rem
  line-height 3rem
